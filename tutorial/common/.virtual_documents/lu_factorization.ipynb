import numpy as np
import random

def generate_random_lower_triangular(n):
    """Generates a random lower triangular matrix of size nxn."""
    L = np.random.rand(n, n)
    return np.tril(L)

def generate_random_upper_triangular(n):
    """Generates a random upper triangular matrix of size nxn."""
    U = np.random.rand(n, n)
    return np.triu(U)

def generate_random_permutation_matrix(n):
    """Generates a random permutation matrix of size nxn."""
    identity = np.identity(n)
    permutations = np.random.permutation(n)
    P = identity[permutations]
    return P

def compute_A_from_PLU(P, L, U):
    """Computes A = P^T L U."""
    P_transpose = np.transpose(P)
    temp_matrix = np.dot(L, U)
    A = np.dot(P_transpose, temp_matrix)
    return A

if __name__ == '__main__':
    n = 4  # Example size of the matrices

    # Generate random L and U matrices
    L = generate_random_lower_triangular(n)
    print("Random Lower Triangular Matrix L:\n", L)

    U = generate_random_upper_triangular(n)
    print("\nRandom Upper Triangular Matrix U:\n", U)

    # Generate a random permutation matrix P
    P = generate_random_permutation_matrix(n)
    print("\nRandom Permutation Matrix P:\n", P)

    # Compute A = P^T L U
    A = compute_A_from_PLU(P, L, U)
    print("\nComputed Matrix A (P^T L U):\n", A)
